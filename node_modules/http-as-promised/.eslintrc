{
  "env": {
    "node": true
  },
  "globals": {
    "Promise": true
  },
  "rules": {
    "curly"                : [2, "multi-line"],
    "key-spacing"          : 0,
    "new-cap"              : 0,
    "new-parens"           : 0,
    "no-mixed-requires"    : 0,
    "no-multi-spaces"      : 0,
    "no-return-assign"     : 0,
    "no-shadow"            : 0,
    "no-use-before-define" : [2, "nofunc"],
    "quotes"               : [2, "single", "avoid-escape"],
    "semi"                 : 0
  }
}